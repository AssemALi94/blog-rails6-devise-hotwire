<h1>Posts</h1>
<% if current_user  %>
<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
<% end %>

<hr>
<% @posts.each do |post| %>
<div class="card">
    <div class="card-body">
        <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
        <p class="card-text"><%= truncate(post.body, length: 60) %></p>
        <small><%= pluralize(post.comments.count, "Comment") %></small>
    </div>
</div>
<br />
<% end %>