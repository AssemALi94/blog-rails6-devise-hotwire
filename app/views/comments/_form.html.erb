<div class="card my-1">
    <div class="card-body">
        <%= simple_form_for [@post, Comment.new], data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset
"} do |f| %>
        <%= f.label :'leave comment' %>
        <%= f.text_area :body, class: 'form-control form-label' %>
        <br />
        <%= f.submit "Comment", class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>